<div class="container" style="height: 90vh;">
    <!-- Jumbotron Header -->
    <header class="jumbotron my-4">
        <h1 class="display-3">Welcome ShareTrippers!</h1>
        <p class="lead">SharedTripp is the best way to road across the country. <br> Find yours SharedTripp's
            buddies, when you share with us yours tripp plans and let the exploration begin!</p>
        <a href="/trips/offer" class="btn btn-primary btn-lg">Offer Tripp!</a>
    </header>

    <!-- Page Features -->
    <div class="row text-center">
        {{#each trips}}
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card h-100">
                <img class="card-img-top" src="{{imageUrl}}" alt="">
                <div class="card-body">
                    <h4 class="card-title">{{startPoint}} - {{endPoint}}</h4>
                </div>
                <div class="card-footer">
                    <a href="/trips/details/{{id}}" class="btn btn-primary">Find Out More!</a>
                </div>
            </div>
        </div>
        {{else}}

        <div style="width: 100%;">
            <img style="max-width: 300px;"
                src="https://images.assetsdelivery.com/compings_v2/topvectors/topvectors1710/topvectors171001346.jpg" />
            <p class="lead" style=" width: 100%; text-align: center; font-size: 22px; font-style: italic;">
                Hitchhiker time...</p>
        </div>
        {{/each}}


    </div>
    <!-- /.row -->
</div>