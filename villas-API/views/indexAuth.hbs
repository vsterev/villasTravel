<h1 class="text-center">Courses</h1>
<section>
    <a href="/course/create" class="btn btn-warning ">Create Course</a>
    <form class="search float-right" method="GET" action="/course/search">
        <label>Search: </label>
        <input type="text" name="title">
        <input type="submit" class="btn btn-info" value="Search">
    </form>
</section>
<div class="container mt-3">
    <div class="row ">
        <div class="card-deck d-flex justify-content-center">
            {{#each courses}}
            <div class="card mb-4">
                <img class="card-img-top" src="{{imageUrl}}" alt="Card image cap" width="400">
                <div class="card-body">
                    <h4 class="card-title">{{title}}</h4>
                </div>
                <div class="card-footer">
                    <a href="/course/details/{{id}}"><button type="button" class="btn btn-info">Details</button></a>
                    <small class="float-right">{{createdAt}}</small>
                </div>
            </div>
            {{else}}
            <h3 class="text-center">No courses...</h3>
            {{/each}}
        </div>
    </div>
</div>