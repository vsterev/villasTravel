<section class="py-5">
    <div class="container">
        <h1 style="margin: 2%; text-align: center;">Offer Tripp</h1>
        <div style="padding: 5%;">
            <form method="POST" action="/trips/offer">
                <div class="form-group">
                    <label for="startAndEndPoint">Starting Point - End Point</label>
                    <input type="text" class="form-control" id="startAndEndPoint" aria-describedby="emailHelp"
                        placeholder="Studentski grad - Pamporovo" name="direction" value="{{direction}}">
                </div>
                <div class="form-group">
                    <label for="dateTime">Date - Time</label>
                    <input type="text" class="form-control" id="dateTime" placeholder="29 December 2019 - 19:00" name="timeStr" value="{{timeStr}}">
                </div>
                <div class="form-group">
                    <label for="carImage">Car Image</label>
                    <input type="text" class="form-control" id="carImage" placeholder="https://..." name="imageUrl" value="{{imageUrl}}">
                </div>
                <div class="form-group">
                    <label for="seats">Seats</label>
                    <input min="1" max="6" type="number" class="form-control" id="seats" placeholder="4..." name="seats" value="{{seats}}">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input type="text" class="form-control" id="description" placeholder="Price, Car information..." name="description" value="{{description}}">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</section>